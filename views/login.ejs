<div
  style="
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f4f4f4;
    margin: 0;
  "
>
  <div
    style="
      max-width: 400px;
      width: 100%;
      background: #ffffff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      text-align: center;
    "
  >
    <!-- Logo -->
    <img
      src="https://st.depositphotos.com/18879306/60933/v/450/depositphotos_609336790-stock-illustration-initials-letter-wedding-monogram-logos.jpg"
      alt="Logo"
      style="
        max-width: 100px;
        margin-bottom: 20px;
        border-radius: 50%;
      "
    />

    <!-- Title -->
    <h2
      style="
        margin: 0;
        margin-bottom: 10px;
        font-size: 24px;
        color: #333;
      "
    >
      Login
    </h2>
    <p style="color: #666; font-size: 14px;">Silahkan Masukkan Akun Anda</p>

    <!-- Display Error Message -->
    <% if (typeof error !== 'undefined') { %>
      <p
        style="
          color: red;
          font-size: 14px;
          margin: 10px 0;
        "
      >
        <%= error %>
      </p>
    <% } %>

    <!-- Display Success Message (Optional) -->
    <% if (typeof success !== 'undefined') { %>
      <p
        style="
          color: green;
          font-size: 14px;
          margin: 10px 0;
        "
      >
        <%= success %>
      </p>
    <% } %>

    <!-- Login Form -->
    <form action="/login" method="POST" style="margin-top: 20px;">
      <input
        type="text"
        name="username"
        placeholder="Username"
        required
        style="
          width: 100%;
          padding: 10px;
          margin: 10px 0;
          border: 1px solid #ccc;
          border-radius: 5px;
          font-size: 14px;
          box-sizing: border-box;
        "
      />
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        style="
          width: 100%;
          padding: 10px;
          margin: 10px 0;
          border: 1px solid #ccc;
          border-radius: 5px;
          font-size: 14px;
          box-sizing: border-box;
        "
      />
      <button
        type="submit"
        style="
          width: 100%;
          padding: 10px;
          background-color: #007bff;
          border: none;
          border-radius: 5px;
          color: white;
          font-size: 16px;
          cursor: pointer;
        "
      >
        Login
      </button>
    </form>

    <!-- Signup Link -->
    <p style="margin-top: 15px; font-size: 14px; color: #666;">
      Belum Memiliki Akun?
      <a href="/signup" style="color: #007bff; text-decoration: none;">Sign Up</a>
    </p>
  </div>
</div>